<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.venezilu.barkeeper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.venezilu.barkeeper.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.venezilu.barkeeper.CocktailDetailsActivity"
            android:label="@string/title_activity_cocktail_details"
            android:parentActivityName="com.venezilu.barkeeper.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.venezilu.barkeeper.CocktailSelectionActivity"
            android:parentActivityName="com.venezilu.barkeeper.MainActivity"
            android:label="@string/title_activity_selection"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.venezilu.barkeeper.CocktailHistoryActivity"
            android:parentActivityName="com.venezilu.barkeeper.MainActivity"
            android:label="@string/title_activity_cocktail_history" 
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
